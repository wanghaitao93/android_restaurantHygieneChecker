<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A4E3E3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvBusinessName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="Business Name"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/evBusinessName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvRegions"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="Regions"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner_Regions"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvAuthorities"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="Authorities"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner_Authorities"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvBusinessType"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="Business Type"
            android:textSize="15sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner_BusinessType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:text="FH Rating"
            android:textSize="15sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner_Rating"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="#FF0000"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F1F4">
        <TextView
            android:id="@+id/tvRange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="Max Distance"
            android:textSize="15sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner_DistanceRange"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/btFilter1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/search"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginStart="173dp"
        android:textColor="#E8F1F4"/>


</LinearLayout>

